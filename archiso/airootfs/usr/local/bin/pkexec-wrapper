#!/usr/bin/env sh
exec pkexec env \
    DISPLAY="$DISPLAY" \
    HOME="$HOME" \
    KDE_SESSION_VERSION="$KDE_SESSION_VERSION" \
    WAYLAND_DISPLAY="$WAYLAND_DISPLAY" \
    XDG_CURRENT_DESKTOP="$XDG_CURRENT_DESKTOP" \
    XDG_SESSION_TYPE="$XDG_SESSION_TYPE" \
    XDG_RUNTIME_DIR="$XDG_RUNTIME_DIR" \
    dbus-launch "$@"
